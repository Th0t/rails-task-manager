<h1>Tasks#show</h1>

<h2><%= @task.name %></h2>
<p><%= @task.description %></p>

<ul>
  <li><%= link_to "Edit", edit_task_path(@task) %></li>
  <li><%= link_to "Delete", task_path(@task), method: "delete", data: { confirm: "Sure?" } %></li>
  <li><%= link_to "Back to summary", tasks_path %></li>
</ul>
